@model AssetManager.Model.Employee

@{
    ViewData["Title"] = "Delete";
}

<div class="ui container">
    <h1 class="ui header">Delete</h1>

    <h3 class="ui dividing header">Are you sure you want to delete this?</h3>

    <div class="ui segment">
        <h4 class="ui header">Employee</h4>
        <dl class="ui list">
            <dt>Global ID</dt>
            <dd>@Html.DisplayFor(model => model.GlobalId)</dd>

            <dt>First Name</dt>
            <dd>@Html.DisplayFor(model => model.FirstName)</dd>

            <dt>Last Name</dt>
            <dd>@Html.DisplayFor(model => model.LastName)</dd>

            <dt>Email</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>Department</dt>
            <dd>@Html.DisplayFor(model => model.Department)</dd>

            <dt>Position</dt>
            <dd>@Html.DisplayFor(model => model.Position)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="EmployeeId" />
            <button type="submit" class="ui red button">Delete</button>
            <a asp-action="Index" class="ui button">Back to List</a>
        </form>
    </div>
</div>
