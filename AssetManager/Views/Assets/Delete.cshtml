@model AssetManager.Model.Asset

@{
    ViewData["Title"] = "Delete";
}

<!-- Include Semantic UI CSS in the head section -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">

<div class="ui container">
    <h1 class="ui header">Delete</h1>

    <h3 class="ui sub header">Are you sure you want to delete this?</h3>
    <div>
        <h4 class="ui header">Asset</h4>
        <div class="ui divider"></div>
        <dl class="ui list">
            <div class="item">
                <div class="header">Asset Type</div>
                @Html.DisplayFor(model => model.AssetType)
            </div>
            <div class="item">
                <div class="header">Brand</div>
                @Html.DisplayFor(model => model.Brand)
            </div>
            <div class="item">
                <div class="header">Model</div>
                @Html.DisplayFor(model => model.Model)
            </div>
            <div class="item">
                <div class="header">Serial Number</div>
                @Html.DisplayFor(model => model.SerialNumber)
            </div>
            <div class="item">
                <div class="header">IMEI Number 1</div>
                @Html.DisplayFor(model => model.Imeinumber1)
            </div>
            <div class="item">
                <div class="header">IMEI Number 2</div>
                @Html.DisplayFor(model => model.Imeinumber2)
            </div>
            <div class="item">
                <div class="header">Accessories</div>
                @Html.DisplayFor(model => model.Accessories)
            </div>
            <div class="item">
                <div class="header">Capacity</div>
                @Html.DisplayFor(model => model.Capacity)
            </div>
            <div class="item">
                <div class="header">Asset Status</div>
                @Html.DisplayFor(model => model.AssetStatus)
            </div>
            <div class="item">
                <div class="header">Purchase Date</div>
                @Html.DisplayFor(model => model.PurchaseDate)
            </div>
            <div class="item">
                <div class="header">Warranty Expiry Date</div>
                @Html.DisplayFor(model => model.WarrantyExpiryDate)
            </div>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="AssetId" />
            <button type="submit" class="ui red button">Delete</button> |
            <a asp-action="Index" class="ui button">Back to List</a>
        </form>
    </div>
</div>

<!-- Include Semantic UI JS before the closing body tag -->
<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
